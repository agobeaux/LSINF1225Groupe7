<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/view_user_username"
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:background="@color/colorBackground"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        tools:text="Username" />

    <View
        android:id="@+id/item_swipe_left_indicator"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:alpha="0"
        android:background="#A5F" />

    <View
        android:id="@+id/item_swipe_right_indicator"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:alpha="0"
        android:background="#5AF" />

    <ImageView
        android:id="@+id/view_user_profil_photo"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:paddingTop="25dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/profile_placeholder" />

    <TextView
        android:id="@+id/view_user_first_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="90dp"
        android:paddingTop="247dp"
        android:text="First name"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/view_user_last_name"
        android:layout_width="match_parent"
        android:layout_height="397dp"
        android:paddingLeft="90dp"
        android:paddingTop="270dp"
        android:text="Last name"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/view_user_email_adresse"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="70dp"
        android:paddingTop="320dp"
        android:text="Email"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHighlight="@android:color/holo_blue_dark"
        android:textSize="18sp"
        android:textStyle="italic" />

    <ImageButton
        android:id="@+id/view_user_add_button"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:fitsSystemWindows="true"
        android:onClick="addfriend"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_add_friend" />

</FrameLayout>