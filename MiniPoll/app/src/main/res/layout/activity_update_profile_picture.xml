<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:columnCount="3"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--<Button
            android:id="@+id/button5"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_gravity="left|top"
            android:text="Button" />
-->
        <ImageButton
            android:id="@+id/caterpie"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:layout_gravity="start|top"
            android:contentDescription="1"
            android:onClick="pictureUpdate"
            android:scaleType="fitXY"
            android:src="@drawable/caterpie"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <ImageButton
            android:id="@+id/charmander"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:layout_gravity="end|top"
            android:contentDescription="2"
            android:onClick="pictureUpdate"
            android:scaleType="fitXY"
            android:src="@drawable/charmander"
            tools:layout_editor_absoluteX="130dp"
            tools:layout_editor_absoluteY="130dp" />

        <ImageButton
            android:id="@+id/eevee"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="end|top"

            android:contentDescription="3"
            android:onClick="pictureUpdate"
            android:scaleType="fitXY"
            android:src="@drawable/eevee"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="0dp" />

        <ImageButton
            android:id="@+id/gyarados"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:layout_gravity="start|top"
            android:contentDescription="4"
            android:onClick="pictureUpdate"
            android:scaleType="fitXY"
            android:src="@drawable/gyarados"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp" />

        <ImageButton
            android:id="@+id/machop"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:layout_gravity="end|top"
            android:contentDescription="5"
            android:onClick="pictureUpdate"
            android:scaleType="fitXY"
            android:src="@drawable/machop"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="301dp" />

        <ImageButton
            android:id="@+id/pidgey"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:layout_gravity="start|top"
            android:contentDescription="6"
            android:onClick="pictureUpdate"
            android:scaleType="fitXY"
            android:src="@drawable/pidgey" />

        <ImageButton
            android:id="@+id/pikachu"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="7"
            android:onClick="pictureUpdate"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/pikachu" />

        <ImageButton
            android:id="@+id/rattata"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="8"
            android:onClick="pictureUpdate"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/rattata" />

        <ImageButton
            android:id="@+id/squirtle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="9"
            android:onClick="pictureUpdate"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/squirtle" />

        <ImageButton
            android:id="@+id/treecko"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="10"
            android:onClick="pictureUpdate"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/treecko" />

        <ImageButton
            android:id="@+id/snorlax"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="11"
            android:onClick="pictureUpdate"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/snorlax" />

        <ImageButton
            android:id="@+id/zapdos"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="12"
            android:onClick="pictureUpdate"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/zapdos" />
    </GridLayout>
</android.support.constraint.ConstraintLayout>