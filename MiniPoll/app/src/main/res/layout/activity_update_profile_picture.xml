        <ImageButton
            android:id="@+id/rattata"
            android:layout_width="110dp"
            android:layout_height="110dp"

            android:contentDescription="8"
            android:onClick="pictureUpdate"
            android:scaleType="fitXY"
            android:src="@drawable/rattata"
