<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".activity.ViewUserActivity">

    <ImageView
        android:id="@+id/like"
        android:layout_width="80dp"
        android:layout_height="81dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65"
        app:srcCompat="@drawable/like" />

    <com.lorentzos.flingswipe.SwipeFlingAdapterView
        android:id="@+id/view_choise1_frame"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/view_choise2_frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer_bipoll_question"
        app:rotation_degrees="15.5"
        tools:context=".MyActivity" />

    <com.lorentzos.flingswipe.SwipeFlingAdapterView
        android:id="@+id/view_choise2_frame"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_choise1_frame"
        app:rotation_degrees="15.5"
        tools:context=".MyActivity" />

    <TextView
        android:id="@+id/answer_bipoll_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="Author"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/answer_bipoll_question"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/answer_bipoll_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text="Question bipoll"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/view_choise1_frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer_bipoll_author" />

    <ImageView
        android:id="@+id/dislike"
        android:layout_width="80dp"
        android:layout_height="81dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65"
        app:srcCompat="@drawable/dislike" />

</android.support.constraint.ConstraintLayout>