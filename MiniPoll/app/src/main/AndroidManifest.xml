<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="be.groupe7lsinf1225.minipoll">

    <application
        android:name=".AppMiniPoll"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.AccountCreationActivity"
            android:parentActivityName=".activity.LoginActivity" />
        <activity
            android:name=".activity.ProfileCreationActivity"
            android:parentActivityName=".activity.AccountCreationActivity" />
        <activity
            android:name=".activity.MainMenuActivity"
            android:parentActivityName=".activity.LoginActivity" />
        <activity android:name=".activity.GestionFriendActivity" />
        <activity android:name=".activity.ViewFriendActivity" />
        <activity android:name=".activity.ViewUserActivity"></activity>
        <activity
            android:name=".activity.UpdateProfileActivity" />
        <activity
            android:name=".activity.QuizActivity"
            android:parentActivityName=".activity.MainMenuActivity" />
    </application>

</manifest>